/* 首页导航栏 */
page{
    color:#666;
    padding:10rpx;
}
.nav-list{
    white-space: nowrap;
    padding:5rpx 0;
}
.nav-item{
    padding:20rpx 45rpx;
    display: inline-block;
    font-size: 30rpx;

}
.nav-item.active{
    border-bottom: 5rpx solid #de688b;
}
/* 轮播图 */
.slides{
    margin-top:10rpx;
}
.slides swiper{
    height: 220rpx;
}
swiper navigator{
    width: 100%;
    height:100%;
}
swiper image{
    width: 100%;
    height:100%;
}
/* 视频列表 */
.video_wrap{
    display: flex;
    flex-wrap:wrap;
    padding: 5rpx;
    justify-content: space-between;
}
.video_wrap .video_item{
    width:48%;
    margin-bottom: 20rpx;
}
.video_item .video_img_wrap{
    position: relative;
}
.video_img_wrap image{
    width: 100%;
    border-radius: 15rpx;
}
.video_img_wrap .video_info{
    position: absolute;
    bottom: 10rpx;
    left: 0;
    width: 100%;
    display: flex;
    justify-content: space-around;
    color:#fff;
    font-size: 24rpx;
}
.video_item .video_title{
    font-size: 28rpx;
    display: -webkit-box;
    overflow: hidden;
    white-space: normal;
    text-overflow: ellipsis;
    word-wrap: break-word;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}


















